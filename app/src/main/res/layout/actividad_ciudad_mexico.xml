<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_top"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/container_top"
            >
            <ImageView
                android:id="@+id/ir_hospedaje"
                android:layout_width="fill_parent"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:onClick="IniciarActivityHospedaje"
                />
            <ImageView
                android:id="@+id/ir_restaurantes"
                android:layout_width="fill_parent"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"

                android:onClick="IniciarActivityRestaurantes"
                />
            <ImageView
                android:id="@+id/ir_a_dondeir"
                android:layout_width="fill_parent"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:onClick="IniciarActivityAdondeir"
                android:layout_marginTop="@dimen/activity_horizontal_margin"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
