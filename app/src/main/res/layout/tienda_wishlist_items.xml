<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ScrollView
            android:id="@+id/wishlist_container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout android:id="@+id/tabla_info_wl"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </TableLayout>

                <LinearLayout
                    android:id="@+id/muestra_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabla_info_wl"
                    android:padding="20dp"
                    android:weightSum="4">

                    <TextView android:id="@+id/total" android:layout_weight="2" android:layout_gravity="center_vertical|left" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView android:visibility="invisible"  android:layout_weight="1" android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />
                    <TextView android:id="@+id/sum_total"  android:layout_weight="1" android:layout_gravity="center_vertical" android:text=""  android:textSize="18sp" android:textStyle="bold" android:textColor="@color/red_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</LinearLayout>
