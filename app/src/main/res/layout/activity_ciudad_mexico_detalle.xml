<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.punkmkt.formula1.CiudadMexicoDetalleActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_tabs"
        android:id="@+id/container_menu"
        android:gravity="center"
        android:baselineAligned="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <Button
            android:id="@+id/hoteles"
            android:background="@drawable/hotel_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="MostrarHoteles"/>
        <Button
            android:id="@+id/restaurantes"
            android:background="@drawable/restaurant_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:onClick="MostrarRestaurantes"
            />
        <Button
            android:id="@+id/lugares"
            android:background="@drawable/city_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:onClick="MostrarAdondeir"/>
        <Button
            android:id="@+id/eventos"
            android:background="@drawable/eventos_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:onClick="MostrarEventos"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container_fragment"
        android:layout_below="@id/container_menu"
        android:background="@color/white"
        >
    </FrameLayout>

</RelativeLayout>
